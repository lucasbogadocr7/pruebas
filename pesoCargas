object verdur√≠n {
var cajones = 10
const pesocajon = 50
var kilometraje = 700000

method transportarcajones(cantidad) {
cajones = cantidad
}

method pesoCarga() = pesocajon*cajones

method velocidadMax () = 80 - self.pesoCarga().div(500)

method recorrer(unosKilometros, unaVelocidadMaxima){
kilometraje += unosKilometros} // auqnue el segundo parametro no lo necesitemos para nada, debemos dejarlo para que sea polimrofico en la ultima funcion
}


