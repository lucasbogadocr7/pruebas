}
}

object cerealitas {
var nivelDeterioro = 0
var property pesoCarga = 0 // necesiro un setter para setear el peso segun los viajes

method velocidadMax(num) {
if(nivelDeterioro < num) {
return 40
} else {return 60 - nivelDeterioro}
method recorrer(unosKilometros, unaVelocidadMaxima) {
nivelDeterioro += (unaVelocidadMaxima -45).max(0)
}
}

object rutaAtlantica {
method dejarPasar(unCamion) {
pdepCargas.cobrar(self.tarifa(unCamion))
unCamion.recorrer(400, 75)
}
method tarifa(unCamion) = 7000 + unCamion.pesoCarga().div(1000)*100

}
